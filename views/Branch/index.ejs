<!-- Popup -->
<!-- Popup thêm mới -->
<div id="popupAdd" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog model-80" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Thêm mới chi nhánh</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div class="row">
            <div class="col-6 col-md-4">
              <b>Tên chi nhánh</b>
              <input class="form-control" id="addName" type="text" placeholder="Nhập tên chi nhánh">
            </div>
            <div class="col-6 col-md-4">
              <b>Số điện thoại</b>
              <input class="form-control" id="addPhone" type="text" placeholder="Nhập số điện thoại của chi nhánh">
            </div>
            <div class="col-12 col-md-4">
              <b>Tiêu đề phiếu in</b>
              <input class="form-control" id="addHeader" type="text" placeholder="Nhập tiêu đề khi in phiếu">
            </div>
            <div class="col-12 col-md-12">
              <b>Ghi chú in phiếu</b>
              <input class="form-control" id="addNote" type="text" placeholder="Nhập ghi chú khi in phiếu">
            </div>
            <div class="col-12 col-md-12">
              <b>Địa chỉ</b>
              <input class="form-control" id="addAddress" type="text" placeholder="Nhập địa chỉ chi nhánh">
            </div>
          </div>
      </div>
      <div class="row">
        <div class="col-12 col-md-6 div-image-branch">
          <b>Logo</b>
            <img onclick="changeImage('inputAddLogo')" id="logoAdd" >
            <input oninput="paste_Image(this,'logoAdd')" id="inputAddLogo"  type="file" accept="image/*">
        </div>
        <div  class="col-12 col-md-6 div-image-branch">
          <b>Ảnh</b>
            <img id="imageAdd" onclick="changeImage('inputAddImage')">
            <input oninput="paste_Image(this,'imageAdd')" id="inputAddImage"  type="file" accept="image/*">
        </div>
      </div>
      
      <div class="modal-footer">
        <button type="button" onclick="confirmAdd()" class="btn btn-primary">Thêm mới</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>

<!-- Popup -->
<!-- Popup thêm mới -->
<div id="popupEdit" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog model-80" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Chỉnh sửa chi nhánh</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div class="row">
            <div class="col-6 col-md-4">
              <b>Tên chi nhánh</b>
              <input class="form-control" id="editName" placeholder="Nhập tên chi nhánh">
            </div>
            <div class="col-6 col-md-4">
              <b>Số điện thoại</b>
              <input class="form-control" id="editPhone" placeholder="Nhập số điện thoại của chi nhánh">
            </div>
            <div class="col-12 col-md-4">
              <b>Tiêu đề phiếu in</b>
              <input class="form-control" id="editHeader" placeholder="Nhập tiêu đề khi in phiếu">
            </div>
            <div class="col-12 col-md-12">
              <b>Ghi chú in phiếu</b>
              <input class="form-control" id="editNote" placeholder="Nhập ghi chú khi in phiếu">
            </div>
            <div class="col-12 col-md-12">
              <b>Địa chỉ</b>
              <input class="form-control" id="editAddress" placeholder="Nhập địa chỉ chi nhánh">
            </div>
          </div>
      </div>
      <div class="row">
        <div class="col-12 col-md-6 div-image-branch">
          <b>Logo</b>
            <img onclick="changeImage('inputEditLogo')" id="logoEdit" >
            <input oninput="paste_Image(this,'logoEdit')" id="inputEditLogo"  type="file" accept="image/*">
        </div>
        <div  class="col-12 col-md-6 div-image-branch">
          <b>Ảnh</b>
            <img id="imageEdit" onclick="changeImage('inputEditImage')">
            <input oninput="paste_Image(this,'imageEdit')" id="inputEditImage"  type="file" accept="image/*">
        </div>
      </div>
      
      <div class="modal-footer">
        <button type="button" id="confirmEdit" class="btn btn-danger">Chỉnh sửa</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>

