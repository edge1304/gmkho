<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link rel="stylesheet" href="/assets/dataTable/buttons.dataTables.min.css">
<link rel="stylesheet" href="/assets/dataTable/jquery.dataTables.min.css">
<link rel="stylesheet" href="/css/calendar.css">

<%- include("../../header",{title:"Quản lý lịch trực"}) %>

  <div class="main-panel">
    <div class="content-wrapper">
      <div class="div-header-table">
        <div class="row">
          <div class="col-4 col-md-2 col-lg-2">
            <label>Thời gian</label>
            <input id="fromdate" onchange="getData()" value="<%- fromdate %>" class="form-control" type="date">
          </div>
         
          <div class="col-1 col-md-1 relative">
            <i onclick="showPopupAdd()" style="font-size: 25px;" class="mdi mdi-plus-circle-outline text-success"></i>
          </div>
        </div>
      </div>
      <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <div id="divTable" class="table-responsive">
                <table class="table" id="dataTable" style="width:100%">
                </table>
              </div>
            </div>
            <div id="divPagination"></div>
          </div>
        </div>
      </div>
    </div>

  <!--  -->
  <div id="popupAdd" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Thêm mới +</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <label>Tên nhân viên</label>
          <select id="addSelectEmployee" name="selectEmployee"></select>
          <label>Ngày</label>
          <input class="form-control" id="addTime" type="date">
          <div>
            <div class="div-flex" >
              <b>Ca trưa</b>
              <input onchange="changeTimeAdd('addnoon',this)" type="checkbox">
            </div>
            <div class="row">
              <div class="col-6 col-md-6">
                <label>Từ</label>
                <input id="addInNoon" class="form-control" type="time">
              </div>
              <div class="col-6 col-md-6">
                <label>Đến</label>
                <input id="addOutNoon" class="form-control" type="time">
              </div>
            </div>
          </div>
          <div>
            <div class="div-flex" >
              <b>Ca tối</b>
              <input onchange="changeTimeAdd('addnight',this)" type="checkbox">
            </div>
            <div class="row">
              <div class="col-6 col-md-6">
                <label>Từ</label>
                <input id="addInNight" class="form-control" type="time">
              </div>
              <div class="col-6 col-md-6">
                <label>Đến</label>
                <input id="addOutNight" class="form-control" type="time">
              </div>
            </div>
          </div>
        </div>
 
        <div class="modal-footer">
          <button type="button" onclick="confirmAdd()" class="btn btn-primary">Thêm mới</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        </div>
      </div>
    </div>
  </div>
  <!--  -->
  <!--  -->
  <div id="popupDelete" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="mdi mdi-calendar-remove"></i>Xóa lịch</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Bạn có chắc muốn xóa lịch trực này</p>
        </div>
        <div class="modal-footer">
          <button type="button" onclick="confirmAdd()" data-dismiss="modal" id="btnDelete" class="btn btn-primary">Đồng ý</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
        </div>
      </div>
    </div>
  </div>
  <!--  -->
<%- include("../../footer") %>
  

<script src="/assets/dataTable/vfs_fonts.js"></script>
<script src="/assets/dataTable/pdfmake.min.js"></script>
<script src="/assets/dataTable/jszip.min.js"></script>
<script src="/assets/dataTable/jquery.dataTables.min.js"></script>
<script src="/assets/dataTable/dataTables.buttons.min.js"></script>

<script src="/assets/dataTable/buttons.print.min.js"></script>
<script src="/assets/dataTable/buttons.html5.min.js"></script>


<script src="/js/ReportsManagement/Calendar/index.js"></script>
<script>
  getData()
</script>

</body>
</html>