<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link rel="stylesheet" href="/assets/dataTable/buttons.dataTables.min.css">
<link rel="stylesheet" href="/assets/dataTable/jquery.dataTables.min.css">

<link rel="stylesheet" href="/css/subcategory.css">
<%- include("../header",{title:"Quản lý sản phẩm"}) %>
<div class="main-panel">
  <div class="content-wrapper">
    <div class="div-header-table">
      <div class="row">
        <div class="col-4 col-md-2 col-lg-2">
          <label>Hiển thị</label>
          <select onchange="getData()" id="selectLimit">
              <option value="<%- limit %>"><%- limit %></option>
              <option value="10">10</option>
              <option value="20">20</option>
              <option value="30">30</option>
              <option value="50">50</option>
              <option value="100">100</option>
          </select>
        </div>
        <div class="col-4 col-md-2 col-lg-2">
          <label>Danh mục</label>
          <select onchange="getData()" name="selectCategory" id="selectCategory">
              
          </select>
        </div>
        <div class="col-6 col-md-3">
          <label>Tìm kiếm</label>
          <input id="keyFind" autocomplete="off"  value="<%- key %>" placeholder="Nhập tên sản phẩm . . ." type="text" class="form-control" >
        </div>
        <div  class="col-2 col-md-1 col-lg-1 col-xl-2 relative divAdd">
          <button id="btnAdd" onclick="showPopup('popupAdd',true)" class="btn btn-success absulate add"><i class="mdi mdi-cart-plus"></i> <span class="hide-on-mobile">Thêm mới</span> </button>
        </div>
        <div class="col-2 col-md-1 col-lg-1 col-xl-2 relative divAdd">
          <button id="btnAddExcel" onclick="selectAdddExcel()" class="btn btn-success absulate add"><i class="mdi mdi-file-excel"></i> <span class="hide-on-mobile"> Thêm nhiều </span></button>
        </div>
        <div class="col-1 col-md-1 col-lg-1 col-xl-1 relative divAdd">
          <button onclick="downloadTemplate()" class="btn btn-success absulate add"><i class="mdi mdi-download"></i> <span class="hide-on-mobile"> Mẫu</span></button>
          <input  oninput="changeFileExcel(this)" type="file" accept=".csv,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel , .xls" id="inputAddExcel" style="display: none;">
        </div>
      </div>
    </div>
    <div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div id="divTable" class="table-responsive">
                <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>STT</th>
                        <th>Tên sản phẩm</th>
                        <th>Danh mục</th>
                        <th>Giá nhập</th>
                        <th>Giá bán</th>
                        <th>Giảm giá</th>
                        <th>Part thưởng</th>
                        <th>Điểm thưởng</th>
                        <th>Chi tiết</th>
                      </tr>
                    </thead>
                    <tbody id="tbodyTable"></tbody>
                </table>
            </div>
          </div>
          <div id="divPagination"></div>
        </div>
      </div>
    </div>
  </div>

<!-- Popup thêm mới -->
<div id="popupAdd" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog model-90" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Thêm mới sản phẩm <i class="mdi mdi-cart-plus"></i> </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-12 col-md-4">
            <label>Danh mục</label>
            <select name="selectCategory" id="addCategory"></select>
          </div>
          <div class="col-12 col-md-8">
            <label>Tên sản phẩm</label>
            <input type="text" class="form-control" placeholder="Nhập tên sản phẩm" id="addName">
          </div>
        </div>

        <div class="row">
          <div class="col-6 col-md-3">
            <label>Giá nhập</label>
            <input class="number form-control" onclick="inputNumber(this)" id="addImportPrice" placeholder="Nhập giá nhập">
          </div>
          <div class="col-6 col-md-3">
            <label>Giá bán</label>
            <input class="number form-control" onclick="inputNumber(this)" id="addExportPrice" placeholder="Nhập giá bán">
          </div>
          <div class="col-6 col-md-3">
            <label>VAT(%)</label>
            <input class="number form-control" onclick="inputNumber(this)" id="addVAT" placeholder="Nhập thuế VAT">
          </div>
          <div class="col-6 col-md-3">
            <label>Chiết khấu(%)</label>
            <input class="number form-control" onclick="inputNumber(this)" id="addCK" placeholder="Nhập chiết khấu">
          </div>
          <div class="col-6 col-md-3">
            <label>Giảm giá</label>
            <input class="number form-control" onclick="inputNumber(this)" id="addDiscount" placeholder="Giảm giá">
          </div>
          <div class="col-6 col-md-3">
            <label>Bảo hành (tháng)</label>
            <input class="number form-control" onclick="inputNumber(this)" id="addWarranty" placeholder="Bảo hành">
          </div>
          <div class="col-6 col-md-3">
            <label>Part thưởng</label>
            <input class="number form-control" onclick="inputNumber(this)" id="addPart" placeholder="Part thưởng">
          </div>
          <div class="col-6 col-md-3">
            <label>Điểm thưởng</label>
            <input class="number form-control" onclick="inputNumber(this)" id="addPoint" placeholder="Điểm thưởng">
          </div>
        </div>
        <div class="row">
          <div class="col-6 col-md-6">
            <label>Số lượng cảnh báo</label>
            <input class="number form-control" onclick="inputNumber(this)" id="addWarning" placeholder="Tồn tối đa">
          </div>
          <div class="col-6 col-md-6">
            <label>Đơn vị tính</label>
            <input class="form-control" value="Chiếc" id="addUnit" placeholder="Tồn tối đa">
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" onclick="confirmAdd()" class="btn btn-primary">Thêm mới</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>
<!--  -->

<!-- =============== -->
<%- include("../footer") %>

<script src="https://cdn.jsdelivr.net/alasql/0.3/alasql.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.7.12/xlsx.core.min.js"></script>

<script>
    var limit = '<%- limit %>'
    var page = '<%- page %>'
    var key = '<%- key %>'
    var id_category = '<%- id_category %>'
</script>
<script src="/js/SubCategory/index.js"></script>
</body>
</html>